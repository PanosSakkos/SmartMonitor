<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/stopSampling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startSampling"
        android:layout_below="@+id/startSampling"
        android:layout_marginTop="28dp"
        android:onClick="stopSampling"
        android:text="@string/main_stopSampling" />

    <Button
        android:id="@+id/plotGraphs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="78dp"
        android:onClick="plotGraphs"
        android:text="@string/main_plotGraphs" />

    <Button
        android:id="@+id/startSampling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/plotGraphs"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:onClick="startSampling"
        android:text="@string/main_startSampling" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/plotGraphs"
        android:layout_below="@+id/plotGraphs"
        android:layout_marginTop="25dp"
        android:onClick="connect"
        android:text="@string/main_connect" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/connectButton"
        android:layout_below="@+id/connectButton"
        android:onClick="disconnect"
        android:text="@string/main_disconnect"/>

        />

</RelativeLayout>